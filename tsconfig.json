{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "bin",
    "src",
    "tests"
  ]
}